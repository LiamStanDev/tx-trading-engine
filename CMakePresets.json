{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug (Default)",
      "description": "Debug build with default compiler",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release (Default)",
      "description": "Release build with default compiler",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "description": "Debug build with Clang",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/clang-debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "TX_ENABLE_ASAN": "ON",
        "TX_ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": "gcc-debug",
      "displayName": "GCC Debug",
      "description": "Debug build with GCC",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/gcc-debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "description": "Release build with GCC + LTO",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/gcc-release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Release",
        "TX_ENABLE_LTO": "ON"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang Release",
      "description": "Release build with Clang + LTO (ThinLTO)",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/clang-release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_AR": "llvm-ar",
        "CMAKE_RANLIB": "llvm-ranlib",
        "TX_ENABLE_LTO": "ON"
      }
    },
    {
      "name": "coverage",
      "displayName": "Coverage Analysis",
      "description": "Debug build with code coverage instrumentation",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "--coverage -fprofile-arcs -ftest-coverage",
        "CMAKE_EXE_LINKER_FLAGS": "--coverage",
        "TX_ENABLE_ASAN": "OFF",
        "TX_ENABLE_UBSAN": "OFF",
        "TX_ENABLE_TSAN": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Build Debug",
      "configurePreset": "debug",
      "jobs": 0
    },
    {
      "name": "release",
      "displayName": "Build Release",
      "configurePreset": "release",
      "jobs": 0
    },
    {
      "name": "clang-debug",
      "displayName": "Build Clang Debug",
      "configurePreset": "clang-debug",
      "jobs": 0
    },
    {
      "name": "gcc-debug",
      "displayName": "Build GCC Debug",
      "configurePreset": "gcc-debug",
      "jobs": 0
    },
    {
      "name": "gcc-release",
      "displayName": "Build GCC Release",
      "configurePreset": "gcc-release",
      "jobs": 0
    },
    {
      "name": "clang-release",
      "displayName": "Build Clang Release",
      "configurePreset": "clang-release",
      "jobs": 0
    },
    {
      "name": "coverage",
      "displayName": "Build Coverage",
      "configurePreset": "coverage",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "displayName": "Test Debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Test Clang Debug",
      "configurePreset": "clang-debug",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=1:halt_on_error=0",
        "UBSAN_OPTIONS": "print_stacktrace=1:halt_on_error=0"
      }
    },
    {
      "name": "gcc-debug",
      "displayName": "Test GCC Debug",
      "configurePreset": "gcc-debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
