{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_AR": "/usr/bin/llvm-ar",
        "CMAKE_RANLIB": "/usr/bin/llvm-ranlib"
      }
    },
    {
      "name": "debug",
      "displayName": "Clang Debug",
      "description": "Debug build with Clang + Sanitizers",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_ASAN": "ON",
        "ENABLE_UBSAN": "ON",
        "BUILD_TESTS": "ON",
        "BUILD_BENCHMARKS": "ON"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Clang RelWithDebInfo",
      "description": "Release with Debug Info + ThinLTO (testing and profiling)",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/relwithdebinfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_LTO": "ON",
        "LTO_MODE": "THIN",
        "WARNINGS_AS_ERRORS": "OFF",
        "BUILD_TESTS": "ON",
        "BUILD_BENCHMARKS": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Clang Release",
      "description": "Full Release build + ThinLTO (maximum optimization)",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_LTO": "ON",
        "LTO_MODE": "THIN",
        "WARNINGS_AS_ERRORS": "OFF",
        "BUILD_TESTS": "OFF",
        "BUILD_BENCHMARKS": "ON"
      }
    },
    {
      "name": "coverage",
      "displayName": "Coverage Analysis (Clang)",
      "description": "Debug build with Clang source-based code coverage",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fprofile-instr-generate -fcoverage-mapping",
        "CMAKE_EXE_LINKER_FLAGS": "-fprofile-instr-generate",
        "ENABLE_ASAN": "OFF",
        "ENABLE_UBSAN": "OFF",
        "ENABLE_TSAN": "OFF",
        "BUILD_TESTS": "ON",
        "BUILD_BENCHMARKS": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Build Clang Debug",
      "configurePreset": "debug",
      "jobs": 0
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Build Clang RelWithDebInfo",
      "configurePreset": "relwithdebinfo",
      "jobs": 0
    },
    {
      "name": "release",
      "displayName": "Build Clang Release",
      "configurePreset": "release",
      "jobs": 0
    },
    {
      "name": "coverage",
      "displayName": "Build Coverage",
      "configurePreset": "coverage",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "displayName": "Test Clang Debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=1:halt_on_error=0",
        "UBSAN_OPTIONS": "print_stacktrace=1:halt_on_error=0"
      }
    },
    {
      "name": "relwithdebinfo",
      "displayName": "Test Clang RelWithDebInfo",
      "configurePreset": "relwithdebinfo",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "coverage",
      "displayName": "Test Coverage",
      "configurePreset": "coverage",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
